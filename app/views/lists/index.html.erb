<div class="container py-5 mb-7 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>Movies</h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>My Lists</h3>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class:"text-decoration-none" do %>
        <div class="card-category">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
